<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


   <TextView
       android:id="@+id/tvGio"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="13dp"
       android:layout_marginTop="10dp"
       android:text="9:41"
       android:textColor="#513F3F"
       android:textSize="17sp"
       android:textStyle="bold"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <ImageView
       android:id="@+id/imgPin"
       android:layout_width="30dp"
       android:layout_height="18dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="15dp"
       android:src="@drawable/rectangle_20"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <ImageView
       android:id="@+id/imgWifi"
       android:layout_width="28dp"
       android:layout_height="18dp"
       android:layout_marginRight="5dp"
       android:src="@drawable/ic_wifi"
       app:layout_constraintBottom_toBottomOf="@+id/imgPin"
       app:layout_constraintEnd_toStartOf="@+id/imgPin" />

   <ImageView
       android:id="@+id/imgSongDT"
       android:layout_width="25dp"
       android:layout_height="18dp"
       android:src="@drawable/ic_signal"
       app:layout_constraintEnd_toStartOf="@+id/imgWifi"
       app:layout_constraintTop_toTopOf="@+id/imgWifi" />

   <TextView
       android:id="@+id/tvGioiThieu"
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="13dp"
       android:layout_marginTop="25dp"
       android:text="Join us to start Crypto trade!"
       android:textColor="@color/black"
       android:textSize="25sp"
       android:textStyle="bold"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tvGio" />

   <ImageView
       android:id="@+id/imgLuaChon"
       android:layout_width="10dp"
       android:layout_height="10dp"
       android:layout_marginRight="12dp"
       android:src="@drawable/download"
       app:layout_constraintBottom_toBottomOf="@+id/tvGioiThieu"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="@+id/tvGioiThieu" />

   <androidx.cardview.widget.CardView
       android:id="@+id/CVSo1"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:layout_marginRight="8dp"
       app:cardCornerRadius="15dp"
       app:layout_constraintBottom_toBottomOf="@+id/imgLuaChon"
       app:layout_constraintEnd_toStartOf="@+id/imgLuaChon"
       app:layout_constraintTop_toTopOf="@+id/imgLuaChon" >
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
         android:src="@drawable/anh_co"/>


   </androidx.cardview.widget.CardView>

   <TextView
       android:id="@+id/tvTieuDe"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:text="Discover your perfect Crypto currencies."
       android:textColor="@color/black"
       android:textSize="15sp"
       app:layout_constraintStart_toStartOf="@+id/tvGioiThieu"
       app:layout_constraintTop_toBottomOf="@+id/tvGioiThieu" />

   <TextView
       android:id="@+id/tvMucLuc"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:text="Create Account"
       android:textColor="@color/black"
       android:textSize="20sp"
       android:textStyle="bold"
       app:layout_constraintStart_toStartOf="@+id/tvTieuDe"
       app:layout_constraintTop_toBottomOf="@+id/tvTieuDe" />

   <androidx.cardview.widget.CardView
       android:id="@+id/Cvso2"
       android:layout_width="350dp"
       android:layout_height="50dp"
       android:layout_marginTop="17dp"
       app:cardCornerRadius="25dp"
       app:layout_constraintStart_toStartOf="@+id/tvMucLuc"
       app:layout_constraintTop_toBottomOf="@+id/tvMucLuc">

      <EditText
          android:id="@+id/edtName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:paddingStart="15dp"
          android:text="Name"
          android:textColor="#CAC5C5"
          android:textSize="18sp"
          android:textStyle="bold" />


   </androidx.cardview.widget.CardView>


   <androidx.cardview.widget.CardView
       android:id="@+id/CVSo3"
       android:layout_width="350dp"
       android:layout_height="50dp"
       android:layout_marginTop="17dp"
       app:cardCornerRadius="25dp"
       app:layout_constraintStart_toStartOf="@+id/Cvso2"
       app:layout_constraintTop_toBottomOf="@+id/Cvso2">

      <EditText
          android:id="@+id/edtEmail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:paddingStart="15dp"
          android:text="Email"
          android:textColor="#CAC5C5"
          android:textSize="18sp"
          android:textStyle="bold" />


   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:id="@+id/CVSo4"
       android:layout_width="350dp"
       android:layout_height="50dp"
       android:layout_marginTop="17dp"
       app:cardCornerRadius="25dp"
       app:layout_constraintStart_toStartOf="@+id/CVSo3"
       app:layout_constraintTop_toBottomOf="@+id/CVSo3">

      <EditText
          android:id="@+id/edtPasswords"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:paddingStart="15dp"
          android:text="Password"
          android:textColor="#CAC5C5"
          android:textSize="18sp"
          android:textStyle="bold" />

      <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_gravity="right"
          android:layout_marginTop="15dp"
          android:layout_marginRight="15dp"
          android:src="@drawable/anhmat" />
   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:id="@+id/CVso5"
       android:layout_width="350dp"
       android:layout_height="50dp"
       android:layout_marginTop="17dp"
       app:cardCornerRadius="25dp"
       app:layout_constraintStart_toStartOf="@+id/CVSo4"
       app:layout_constraintTop_toBottomOf="@+id/CVSo4">

      <EditText
          android:id="@+id/edtPhone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:paddingStart="15dp"
          android:text="Phone Number"
          android:textColor="#CAC5C5"
          android:textSize="18sp"
          android:textStyle="bold" />

      <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_gravity="right"
          android:layout_marginTop="15dp"
          android:layout_marginRight="15dp"
          android:src="@drawable/anhmat" />

   </androidx.cardview.widget.CardView>

   <RadioGroup
       android:id="@+id/rgGender"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="17dp"
       app:layout_constraintTop_toBottomOf="@+id/CVso5"
       app:layout_constraintStart_toStartOf="@+id/CVso5" >
      <RadioButton
          android:id="@+id/rbMale"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:checked="true"
          android:text="I agree with the Terms Condition  Privacy Policy"/>
      <RadioButton
          android:id="@+id/rbFemale"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="New Account"/>
   </RadioGroup>

   <androidx.cardview.widget.CardView
       android:id="@+id/CvSo6"
       android:layout_width="300dp"
       android:layout_height="50dp"
       android:layout_marginTop="20dp"
       android:backgroundTint="#F18D43"
       app:cardCornerRadius="30dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/rgGender">

      <Button
          android:id="@+id/btnJoin"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:backgroundTint="#F18D43"
          android:text="Join us"
          android:textStyle="bold" />

   </androidx.cardview.widget.CardView>

   <TextView
       android:id="@+id/tvKetThuc"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="17dp"
       android:text="Do have already accout?"
       android:textSize="16sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/CvSo6" />

   <TextView
       android:id="@+id/tvLogin"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Login"
       android:textColor="@color/teal_700"
       android:textSize="17sp"
       android:textStyle="bold"
       app:layout_constraintBottom_toBottomOf="@+id/tvKetThuc"
       app:layout_constraintStart_toEndOf="@+id/tvKetThuc"
       app:layout_constraintTop_toTopOf="@+id/tvKetThuc" />

</androidx.constraintlayout.widget.ConstraintLayout>